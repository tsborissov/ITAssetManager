@model AssetsQueryModel

@{
    ViewBag.Title = "Assets";
}

<div class="row">
    <div class="col-12">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <div class="row mt-3 mb-3">
            <form asp-action="All" method="get" class="col-12">
                <div class="form-actions">
                    <input type="text" name="SearchString" class="col-md-7" value="@Model.SearchString" placeholder="Search by Brand, Model, etc..." />
                    <input type="submit" class="btn btn-primary" value="Search" />
                    <a asp-action="All" class="btn btn-primary">Full List</a>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        <a asp-action="All"
                           asp-route-sortOrder="@(String.IsNullOrEmpty(Model.SortOrder) ? "brand_desc" : "")"
                           asp-route-searchString="@Model.SearchString">
                            Brand
                        </a>
                    </th>
                    <th>
                        <a asp-action="All"
                           asp-route-sortOrder="@(Model.SortOrder == "model" ? "model_desc" : "model")"
                           asp-route-searchString="@Model.SearchString">
                            Model
                        </a>
                    </th>
                    <th>
                        <a asp-action="All"
                           asp-route-sortOrder="@(Model.SortOrder == "status" ? "status_desc" : "status")"
                           asp-route-searchString="@Model.SearchString">
                            Status
                        </a>
                    </th>
                    <th>SerialNr</th>
                    <th>InventoryNr</th>
                    @if (User.IsAdmin())
                    {
                        <th>User</th>
                        <th>Edit</th>
                        <th>Assign/Collect</th>
                    }
                    else
                    {
                        <th>User</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var asset in Model.Assets)
                {
                    <tr>
                        <td>@asset.Brand</td>
                        <td>@asset.Model</td>
                        <td>@asset.Status</td>
                        <td>@asset.SerialNr</td>
                        <td>@asset.InventoryNr</td>

                        @if (User.IsAdmin())
                        {
                            <td>@asset.User</td>
                            <td>
                                @if (asset.Status != "In Use")
                                {
                                    <div class="button-holder col-md-3">
                                        <a asp-action="Edit"
                                           asp-route-id="@asset.Id"
                                           asp-route-searchString="@Model.SearchString"
                                           asp-route-sortOrder="@Model.SortOrder"
                                           asp-route-currentPage="@Model.CurrentPage"
                                           class="btn btn-warning">
                                            Edit
                                        </a>
                                    </div>
                                }
                            </td>
                            <td>
                                @if (asset.User == null && asset.Status == "In Stock")
                                {
                                    <div class="button-holder col-md-3">
                                        <a asp-action="Assign"
                                           asp-route-id="@asset.Id"
                                           asp-route-searchString="@Model.SearchString"
                                           asp-route-sortOrder="@Model.SortOrder"
                                           asp-route-currentPage="@Model.CurrentPage"
                                           class="btn btn-danger">
                                            Assign
                                        </a>
                                    </div>
                                }

                                @if (asset.User != null)
                                {
                                    <div class="button-holder col-md-3">
                                        <a asp-action="Collect"
                                           asp-route-id="@asset.Id"
                                           asp-route-searchString="@Model.SearchString"
                                           asp-route-sortOrder="@Model.SortOrder"
                                           asp-route-currentPage="@Model.CurrentPage"
                                           class="btn btn-success">
                                            Collect
                                        </a>
                                    </div>
                                }
                            </td>
                        }
                        else
                        {
                            <td>
                                <div class="button-holder col-md-3">
                                    <a asp-controller="AssetModels"
                                       asp-action="Details"
                                       asp-route-id="@asset.ModelId"
                                       class="btn btn-primary">
                                        Details
                                    </a>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Assets.Any())
        {
            <h4 class="text-center">No assets found!</h4>
        }

    </div>
</div>
<div class="row">
    <div class="col-12">
        <partial name="_PaginationPartial" model="@Model" />
    </div>
</div>

