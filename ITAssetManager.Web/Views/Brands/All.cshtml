@model ICollection<BrandListingViewModel>

@{
    ViewData["Title"] = "All Brands";
}

@{ 
    var rowNr = 1;
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin">All Brands:</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Brand</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var brand in Model)
            {
                <tr>
                    <th scope="row">@rowNr</th>
                    <td>@brand.Name</td>
                    <td>
                        <div class="button-holder">
                            <a asp-controller="Brands"
                               asp-action="Edit"
                               asp-route-id="@brand.Id"
                               class="btn btn-primary">Edit</a>
                        </div>
                    </td>
                </tr>
                
                rowNr++;
            }
            </tbody>
        </table>
    </div>
</div>