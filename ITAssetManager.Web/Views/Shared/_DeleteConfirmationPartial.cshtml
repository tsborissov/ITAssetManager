<div class="modal fade" id="@ViewData["DataTarget"]_Delete_@ViewData["TargetId"]" tabindex="-1" role="dialog" aria-labelledby="@ViewData["DataTarget"]_@ViewData["TargetId"]" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm item deletion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Record will be deleted! Are you sure?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <a asp-action="Delete"
                   asp-route-id="@ViewData["TargetId"]"
                   asp-route-searchString="@ViewData["SearchString"]"
                   asp-route-sortOrder="@ViewData["SortOrder"]"
                   asp-route-currentPage="@ViewData["CurrentPage"]"
                   class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>