@model ICollection<StatusListingViewModel>

@{
    ViewData["Title"] = "All Statuses";
}

@{
    var rowNr = 1;
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin">All Categories:</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Asset Status</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var status in Model)
                {
                    <tr>
                        <th scope="row">@rowNr</th>
                        <td>@status.Name</td>
                        <td>
                            <div class="button-holder">
                                <a asp-controller="Brands"
                                   asp-action="Edit"
                                   asp-route-id="@status.Id"
                                   class="btn btn-primary">Edit</a>
                            </div>
                        </td>
                    </tr>

                    rowNr++;
                }
            </tbody>
        </table>
    </div>
</div>