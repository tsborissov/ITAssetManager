@model VendorAddFormModel

@{ 
    ViewData["Title"] = "Add Vendor";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin">Add Vendor:</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vat"></label>
                <input asp-for="Vat" class="form-control">
                <span asp-validation-for="Vat" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details"></label>
                <textarea asp-for="Details" class="form-control" rows="3" placeholder="Address, contact info, etc..."></textarea>
                <span asp-validation-for="Details" class="small text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary float-right">Save</button>
        </form>
    </div>
</div>